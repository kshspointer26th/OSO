<Window x:Class="OSO.TransparencyAdjustDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSO"
        mc:Ignorable="d"
        Title="투명도 조절" Height="122" Width="254" Closed="Window_Closed" ResizeMode="NoResize">
    <Grid Margin="0,0,4,1">
        <Slider x:Name="transparencySlider" ValueChanged="transparencySlider_ValueChanged" Thumb.DragCompleted="transparencySlider_DragCompleted" Margin="10,10,9,0" VerticalAlignment="Top" Maximum="100"/>
        <Label Content="0" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,-0.077"/>
        <Label Content="100" HorizontalAlignment="Right" Margin="0,28,10,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,-0.077"/>
        <Button x:Name="setTransparencyButton" Click="setTransparency_Click" Content="투명도 값 (으)로 설정" Margin="10,60,12,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
