<Window x:Class="OSO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSO"
        mc:Ignorable="d"
        Title="OSO" Topmost="False"  ShowInTaskbar="False" AllowsTransparency="True" WindowStyle="None" Height="674.5" Width="500"
        WindowStartupLocation="Manual" 
        ResizeMode="NoResize"
        Top="0"
        Loaded="Window_Loaded">
    <Grid
        x:Name="RootLayout" Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <StatusBar HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="500" MouseDoubleClick="Window_MouseDoubleClick" MouseDown="Window_MouseDown"/>
        <Grid x:Name="wrapper" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="587*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ListView x:Name="mealList" Margin="0,96,0,-20" Grid.ColumnSpan="2" Grid.Row="1">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <Label Content="[2019년 1월 18일 급식표 표시중]" HorizontalAlignment="Left" Margin="2,8,0,0" Grid.Row="1" VerticalAlignment="Top" Width="186" Grid.Column="1" Height="26"/>
            <Label Content="&lt; 어제" HorizontalAlignment="Left" Margin="2,39,0,0" Grid.Row="1" VerticalAlignment="Top" Width="83" Grid.Column="1" Height="26"/>
            <Label Content="배식까지 남은 시간 : " HorizontalContentAlignment="Right" HorizontalAlignment="Right" Margin="0,8,0,0" Grid.Row="1" VerticalAlignment="Top" Width="186" Grid.Column="1" Height="26"/>
            <Label Content="날짜 선택하기" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="183,39,186,0" Grid.Row="1" VerticalAlignment="Top" Width="131" Grid.Column="1" Height="26"/>
            <Label Content="내일 &gt;" HorizontalContentAlignment="Right" HorizontalAlignment="Right" Margin="0,39,10,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="26"/>
            <Label Content="투명도 조절" HorizontalAlignment="Left" Margin="2,70,0,0" Grid.Row="1" VerticalAlignment="Top" Width="83" Grid.Column="1" Height="26" HorizontalContentAlignment="Center"/>
            <Label Content="업데이트 확인" HorizontalAlignment="Left" Margin="90,70,0,0" Grid.Row="1" VerticalAlignment="Top" Width="98" Grid.Column="1" Height="26" HorizontalContentAlignment="Center"/>
            <Label Content="프로그램 정보" HorizontalAlignment="Left" Margin="193,70,0,0" Grid.Row="1" VerticalAlignment="Top" Width="106" Grid.Column="1" Height="26" HorizontalContentAlignment="Center"/>

        </Grid>
    </Grid>
</Window>
